---
const { project } = Astro.props;
---

<div id=`${project.id}` class="scale-y-95 project-card flex min-w-[calc(100%)] w-[calc(100vh-256px)] bg-black/20 border border-secondary/20 h-[75vh] rounded-3xl snap-center transition-[height] duration-1000">
	<div class="flex flex-1 flex-col p-12 gap-6">
		<h2 class="text-6xl font-bold font-lexend">{project.title}</h2>
		<div class="flex">tags here</div>
		<p class="text-secondary/50">{project.description}</p>
	</div>

	<div class="flex flex-col w-1/2 h-full p-12 overflow-auto gap-3">
		{
			project.images?.map((image) => (
				<div class="flex min-h-[45%] rounded-md overflow-clip aspect-video bg-red-500">
					<img class="object-cover w-full" src={`/images/${image}`} alt="" />
				</div>
			))
		}
	</div>
</div>
